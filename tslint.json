{
    "extends": [
        "tslint:latest", "tslint-react"
    ],
    "jsRules": {
        "semicolon": [true, "never"],
        "member-access": false,
        "quotemark": [true, "single", "jsx-doubles"],
        "trailing-comma": [ true, { "multiline": "never", "singleline": "never" }],
        "interface-name": [true, "never-prefix"],
        "no-implicit-dependencies": [true, "dev"]
    },
    "rules": {
        "semicolon": [true, "never"],
        "member-access": false,
        "quotemark": [true, "single", "jsx-doubles"],
        "trailing-comma": [ true, { "multiline": "never", "singleline": "never" }],
        "interface-name": [true, "never-prefix"],
        "no-implicit-dependencies": [true, "dev"]
    }
}